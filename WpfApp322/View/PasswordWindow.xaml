<Window x:Class="WpfApp322.PasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp322"
        mc:Ignorable="d"
        Title="PasswordWindow" Height="450" Width="800">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="200">
            <TextBlock Text="Введите пароль:" Margin="0,0,0,10"/>
            <PasswordBox x:Name="PasswordBox" Margin="0,0,0,20"/>
            <Button Content="Войти" Click="LoginButton_Click" Padding="10,5" HorizontalAlignment="Right"/>
        </StackPanel>
    </Grid>
</Window>
